<?xml version="1.0" encoding="UTF-8" ?>
<configuration debug="true">
    <!--Discord Log-->
    <springProperty name="DISCORD_WEBHOOK_URI" source="logging.discord.webhook-uri"/>
    <appender name="DISCORD" class="com.github.napstr.logback.DiscordAppender">
        <webhookUri>${DISCORD_WEBHOOK_URI}</webhookUri>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %msg %n</pattern>
        </layout>
        <username>백엔드 에러 로그</username>
        <avatarUrl>https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTba_bbn-3kNP4WU6pp1cOKho1N3qf2Vz8rNQ&amp;s</avatarUrl>
        <tts>false</tts>
    </appender>

    <!--Consol appender 설정-->
    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>%d %-5level %logger{35} - %msg%n</Pattern>
        </encoder>
    </appender>

    <appender name="ASYNC_DISCORD" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="DISCORD" />
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
    </appender>

    <!--로그 레벨 지정-->
    <root level="ERROR">
        <appender-ref ref="Console"/>
        <appender-ref ref="ASYNC_DISCORD" />
    </root>
</configuration>